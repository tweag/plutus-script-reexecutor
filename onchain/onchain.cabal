name:          onchain
version:       0.0.0
build-type:    Simple

library
  exposed-modules:
    Onchain.Debug
    Onchain.Escrow
    Onchain.Release
    Onchain.Simple

  hs-source-dirs:     src
  include-dirs:       src
  default-extensions:
    CPP
    DataKinds
    ImportQualifiedPost
    ImportQualifiedPost
    MultiParamTypeClasses
    NoImplicitPrelude
    NumericUnderscores
    OverloadedStrings
    OverloadedStrings
    ScopedTypeVariables
    TemplateHaskell
    ViewPatterns

  ghc-options:
    -Wall -Wno-missed-extra-shared-lib -fobject-code
    -fno-ignore-interface-pragmas -fignore-hpc-changes
    -fno-omit-interface-pragmas

  build-depends:
    , base
    , bytestring
    , cardano-api
    , containers
    , plutus-ledger-api
    , plutus-tx
    , plutus-tx-plugin

  default-language:   Haskell2010

