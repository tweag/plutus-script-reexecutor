  default-language:   Haskell2010
  main-is:            Export.hs
  hs-source-dirs:     .
  default-extensions: ImportQualifiedPost
  build-depends:
    , base
    , bytestring
    , cardano-api
    , directory
    , filepath
    , onchain
    , optparse-applicative
    , plutus-ledger-api
    , plutus-tx
    , serialise
    , streamly-core
    , streamly-process
